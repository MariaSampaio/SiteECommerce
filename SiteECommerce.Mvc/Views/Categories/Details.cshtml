@model SiteECommerce.Metier.Categorie

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Categorie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomCategorie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomCategorie)
        </dd>

    </dl>

    <h5>Produits disponible</h5>
    <ul>
        @foreach (var item in Model.Produits)
        {
            <li>@Html.DisplayFor(i => item.NomProduit)</li>
        }
    </ul>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdCategorie }) |
    @Html.ActionLink("Back to List", "Index")
</p>
